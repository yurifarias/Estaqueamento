<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <TextView
        android:id="@+id/TV_indice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:text="#1"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/TV_indice"
        android:layout_toRightOf="@+id/TV_indice"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TV_posY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="4dp"
            android:text="Y:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pos_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="metros"
            android:inputType="numberSigned|numberDecimal"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TV_posZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="4dp"
            android:text="Z:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pos_z"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="metros"
            android:inputType="numberSigned|numberDecimal"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL1"
        android:layout_toEndOf="@+id/TV_indice"
        android:layout_toRightOf="@+id/TV_indice"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TV_ang_Crav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="4dp"
            android:text="a:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ang_crav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="graus"
            android:inputType="numberSigned|numberDecimal"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TV_ang_Proj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="4dp"
            android:text="w:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ang_proj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="graus"
            android:inputType="numberSigned|numberDecimal"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/LL2"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="#777" />

</RelativeLayout>